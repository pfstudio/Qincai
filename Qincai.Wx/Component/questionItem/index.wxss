.question{
  background-color: #ffffff;
  padding-top:25rpx;
  border-bottom:1rpx solid #dddddd;
}
.questioner{
}
.footer{
  font-size:25rpx;
  color:#bbbbbb;
  margin-left: 40rpx;
  padding-bottom: 25rpx;
}
.avatar{
  margin-left: 40rpx;
  overflow: hidden;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.name{
  font-size:30rpx;
  display: inline-block;
  position: relative;
  bottom: 15rpx;
  left:25rpx;
}
.content{
  margin-left: 40rpx;
}
.questionTitle{
  font-size: 35rpx;
  font-family: "黑体";
  color: #000000;
}
.questionContent{
  font-size: 30rpx;
  color:#999999;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  margin-bottom: 15rpx;
}

