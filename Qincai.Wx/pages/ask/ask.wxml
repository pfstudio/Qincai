<van-cell-group>
  <view class="label">标题</view>
  <van-field class="title"
    value="{{title}}"
    placeholder="请输入问题标题"
    bind:change="titleChange"
    autosize
  />
  <view class="label">内容</view>
  <van-field
    input-class="input-field"
    value="{{content}}"
    placeholder="请输入问题描述"
    type="textarea"
    bind:change="contentChange"
    autosize
  />
  <view class="label">附加内容</view>
  <van-button bind:tap="chooseImages">选择图片</van-button>
  <view wx:if="{{images}}" wx:for="{{images}}">
    <image src="{{item}}"></image>
  </view>
</van-cell-group>
<van-button type="primary" class="container" bind:click="submit" loading="{{loading}}">发布</van-button>