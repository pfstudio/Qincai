<!--pages/detail/detail.wxml-->
<view class="label">问题</view>
<van-panel custom-class="question" title="标题:{{questionTitle}}" desc="提问者:{{questioner}}" autosize use-footer-slot footer-class="footer">
  <van-panel class="van-multi-ellipsis--l2" title="问题描述" desc="{{questionContent}}"/>
  <view slot = "footer">
    <view>提问时间：{{questionTime}}</view>
  </view>
</van-panel>
<view class="label">回答列表</view>
<view class="list">
  <block wx:for="{{answers}}">
    <van-panel use-footer-slot footer-class="footer" custom-class="answerBox">
      <view class="answerContent">{{item.content.text}}</view>
      <view slot = "footer">
        <view class="answerer">
          <view class="answer-slot">回答人:{{item.answerer.name}}</view>
          <view>回答时间: {{item.answerTime}}</view>
        </view>
        <van-button custom-class="plus" id="{{item.content.text}}" size='small' bind:click="plus">追答</van-button>
      </view>
    </van-panel>
  </block>
</view>
<van-button round custom-class="replyBtn" type="primary" bind:click="reply">回答</van-button>

