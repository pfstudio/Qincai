<!--pages/reply/reply.wxml-->
  <view class="label">回答</view>
    <view class="inputBox">
      <view wx:if="{{quote}}" style="padding-top:20rpx;">
        <view class="quote">{{quote}}</view>
      </view>
      <van-cell-group>
        <van-field     
        input-class="input-field"
        value="{{answer}}"
        placeholder="请输入你回答的内容"
        type="textarea"
        bind:change="answerChange"
        autosize
      />
      </van-cell-group>
    </view>

    <view class="addImage">
      <block wx:for="{{answerImages}}" wx:for-item="image" class="images">
        <image id="{{index}}" class="answerImg" src="{{image}}" bindtap="changeImage"></image>
      </block>
      <image wx:if="{{count < 3}}" class="answerImg" src="../../images/addImage.png" bindtap="addImages"></image>
    </view>

    <view class="label">问题</view>
    <van-panel custom-class="question" title="标题:{{title}}" desc="提问者:{{questioner}}" use-footer-slot footer-class="footer">
      <view>
        <view class="content">
        <text class="contentTitle">问题描述\n</text>
        <text class="contentText">{{content}}</text>
        </view>
        <view wx:if="{{questionImages}}" class="imgBox">
        <block wx:for="{{questionImages}}" wx:for-item="image" class="images">
          <image class="answerImg" src="{{image}}" bindtap="showImage" data-url="{{image}}"></image>
        </block>
        </view>
      </view>   
      <view slot = "footer">
        <view>提问时间：{{questionTime}}</view>
      </view>
    </van-panel>

    <van-button custom-class="submitBtn" type="primary" bind:click="submit" loading="{{loading}}">提交</van-button>
    